@{
    Layout = "_Layout";
}

@using Travel.Models;
@model List<Travel.Models.Review>;

<h1>Reviews</h1>

@if (@Model.Count == 0)
{
    <h3>No reviews have been added yet!</h3>
}

@foreach (Review review in Model)
{
    <li>@Html.ActionLink($"{review.Description}", "Details", new { id = review.ReviewId})</li>
}

<p>@Html.ActionLink("Add a new review", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
