@{
    Layout = "_Layout";
}

@using Travel.Models;
@model List<Travel.Models.Place>;

<h1>Places</h1>

@if (@Model.Count == 0)
{
    <h3>No places have been added yet!</h3>
}

@foreach (Place place in Model)
{
    <li>@Html.ActionLink($"{place.City}", "Details", new { id = place.PlaceId})</li>
}

<p>@Html.ActionLink("Add a new place", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
